---
/**
 * Partnership Banner Component
 * Finding YALL community partnership section
 */

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const content = {
  en: {
    badge: 'Community partner',
    title: 'Autism-friendly events in DFW',
    description: 'We partner with Finding YALL to connect families with local events for autistic children.',
    cta: 'Explore events',
    ctaUrl: 'https://findingyall.com/',
  },
  es: {
    badge: 'Socio comunitario',
    title: 'Eventos para familias con autismo en DFW',
    description: 'Nos asociamos con Finding YALL para conectar familias con eventos locales para ni√±os autistas.',
    cta: 'Explorar eventos',
    ctaUrl: 'https://findingyall.com/',
  },
};

const t = content[lang];
---

<section class="py-16 lg:py-20 bg-gradient-to-r from-primary-600 to-primary-700 relative overflow-hidden">
  <!-- Decorative circles -->
  <div class="absolute top-0 right-0 w-64 h-64 bg-primary-500/30 rounded-full -translate-y-1/2 translate-x-1/2"></div>
  <div class="absolute bottom-0 left-0 w-48 h-48 bg-primary-500/20 rounded-full translate-y-1/2 -translate-x-1/2"></div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex flex-col lg:flex-row items-center justify-between gap-8">
      <div class="text-center lg:text-left">
        <span class="inline-block px-3 py-1 bg-white/20 text-white text-sm font-medium rounded-full mb-4">
          {t.badge}
        </span>
        <h2 class="text-2xl md:text-3xl lg:text-4xl font-bold text-white mb-4">
          {t.title}
        </h2>
        <p class="text-lg text-primary-100 max-w-2xl">
          {t.description}
        </p>
      </div>
      <div class="flex-shrink-0">
        <a
          href={t.ctaUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center px-8 py-4 min-h-[48px] text-lg font-bold text-primary-600 bg-white rounded-lg hover:bg-primary-50 transition-colors no-underline shadow-lg"
        >
          {t.cta}
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>
