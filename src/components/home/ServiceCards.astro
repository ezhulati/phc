---
/**
 * Service Cards Component
 * Displays 6 service offering cards in a responsive grid
 */

import services from '@/data/services.json';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const sectionTitle = lang === 'es'
  ? 'Nuestros servicios'
  : 'Our services';

const sectionSubtitle = lang === 'es'
  ? 'Terapia ABA integral disenada para las necesidades unicas de su hijo'
  : 'Comprehensive ABA therapy tailored to your child\'s unique needs';
---

<section class="py-20 lg:py-28 bg-neutral-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
        {sectionTitle}
      </h2>
      <p class="text-lg text-neutral-600">
        {sectionSubtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {services.map((service, index) => (
        <a
          href={service.href}
          class="group bg-white rounded-2xl overflow-hidden shadow-md hover:shadow-2xl transition-all duration-300 no-underline border border-neutral-100 hover:border-primary-200"
        >
          <div class="relative h-52 overflow-hidden">
            <img
              src={service.image}
              alt={lang === 'es' ? service.titleEs : service.title}
              class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-black/20 to-transparent"></div>
            <h3 class="absolute bottom-4 left-4 right-4 text-xl font-bold text-white drop-shadow-lg">
              {lang === 'es' ? service.titleEs : service.title}
            </h3>
          </div>
          <div class="p-6">
            <p class="text-neutral-600 leading-relaxed">
              {lang === 'es' ? service.descriptionEs : service.description}
            </p>
            <span class="inline-flex items-center mt-4 text-primary-600 font-bold group-hover:text-primary-700">
              {lang === 'es' ? `Conocer ${service.titleEs.toLowerCase()}` : `Learn about ${service.title.toLowerCase()}`}
              <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
