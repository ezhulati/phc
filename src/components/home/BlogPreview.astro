---
/**
 * Blog Preview Section Component
 * Displays recent blog articles on the homepage
 */

import postsData from '@/data/posts.json';
import { formatDate } from '@/lib/utils/dates';
import { decodeHtmlEntities } from '@/lib/utils/get-page-data';
import type { WPPost } from '@/lib/graphql/types';

interface Props {
  lang?: 'en' | 'es';
  limit?: number;
}

const { lang = 'en', limit = 6 } = Astro.props;

const allPosts = postsData as WPPost[];
const recentPosts = allPosts.slice(0, limit);

const sectionTitle = lang === 'es'
  ? 'Artículos'
  : 'Articles';

const sectionSubtitle = lang === 'es'
  ? 'Recursos sobre terapia ABA y desarrollo infantil'
  : 'Resources on ABA therapy and child development';

const viewAllText = lang === 'es' ? 'Ver todos los artículos' : 'View all articles';
---

{recentPosts.length > 0 && (
  <section class="py-16 lg:py-24 bg-neutral-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-12">
        <div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-2">
            {sectionTitle}
          </h2>
          <p class="text-lg text-neutral-600">
            {sectionSubtitle}
          </p>
        </div>
        <a
          href="/aba-therapy/"
          class="mt-4 md:mt-0 inline-flex items-center min-h-[44px] text-primary-600 font-bold hover:text-primary-700 no-underline"
        >
          {viewAllText}
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {recentPosts.map((post) => (
          <a
            href={`/${post.slug}/`}
            class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all duration-300 no-underline"
          >
            {post.featuredImage?.node && (
              <div class="relative h-48 overflow-hidden">
                <img
                  src={post.featuredImage.node.sourceUrl}
                  alt={post.featuredImage.node.altText || decodeHtmlEntities(post.title)}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </div>
            )}
            <div class="p-6">
              {post.categories?.nodes?.[0] && (
                <span class="text-base text-primary-600 font-medium">
                  {post.categories.nodes[0].name}
                </span>
              )}
              <h3 class="text-lg font-bold text-neutral-900 mt-2 line-clamp-2 group-hover:text-primary-600 transition-colors">
                {decodeHtmlEntities(post.title)}
              </h3>
              <p class="text-base text-neutral-500 mt-2">
                {formatDate(post.date, lang)}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>
)}
