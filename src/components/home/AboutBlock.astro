---
/**
 * About/Contact Block Component
 * Displays company info with contact details and service areas
 */

import cities from '@/data/cities.json';

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const content = {
  en: {
    title: 'About Prospera Healthcare',
    description: 'In-home ABA therapy for children with autism across Texas. Our BCBAs and RBTs help kids build skills that matter.',
    serviceAreasTitle: 'We serve',
    contactUs: 'Contact us'
  },
  es: {
    title: 'Sobre Prospera Healthcare',
    description: 'Terapia ABA a domicilio para niños con autismo en todo Texas. Nuestros BCBAs y RBTs ayudan a los niños a desarrollar habilidades importantes.',
    serviceAreasTitle: 'Servimos',
    contactUs: 'Contáctenos'
  }
};

const { title, description, serviceAreasTitle, contactUs } = content[lang];
const { contact, regions } = cities;
---

<section class="py-16 lg:py-24 bg-neutral-900 text-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid lg:grid-cols-2 gap-12">
      <!-- About Text -->
      <div>
        <h2 class="text-2xl font-bold mb-6 text-white">{title}</h2>
        <p class="text-neutral-300 text-lg mb-8">{description}</p>

        <div class="mb-8">
          <h3 class="text-lg font-bold text-primary-400 mb-4">{serviceAreasTitle}</h3>
          <div class="flex flex-wrap gap-4">
            {regions.map((region) => (
              <a
                href={`/${region.slug}/`}
                class="px-4 py-2 bg-neutral-800 rounded-lg text-white hover:bg-primary-600 transition-colors no-underline"
              >
                {lang === 'es' ? region.nameEs : region.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="bg-neutral-800 rounded-2xl p-8">
        <h3 class="text-xl font-bold mb-6 text-white">{contactUs}</h3>

        <div class="space-y-4">
          <div class="flex items-start gap-4">
            <svg class="w-6 h-6 text-primary-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <p class="text-white">{contact.address}</p>
            </div>
          </div>

          <div class="flex items-center gap-4">
            <svg class="w-6 h-6 text-primary-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <a href={`tel:${contact.phone.replace(/[^0-9]/g, '')}`} class="text-white hover:text-primary-400 transition-colors no-underline">
              {contact.phone}
            </a>
          </div>

          <div class="flex items-center gap-4">
            <svg class="w-6 h-6 text-primary-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            <a href={`mailto:${contact.email}`} class="text-white hover:text-primary-400 transition-colors no-underline">
              {contact.email}
            </a>
          </div>

          <div class="flex items-center gap-4">
            <svg class="w-6 h-6 text-primary-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="text-white">{contact.hours}</p>
          </div>
        </div>

        {/* Primary CTA - 48px min touch target per Practical UI */}
        <a
          href={lang === 'es' ? '/es/contacto/' : '/contact/'}
          class="mt-8 inline-flex items-center justify-center w-full px-6 min-h-[48px] bg-primary-500 hover:bg-primary-600 text-white font-bold rounded-lg transition-colors no-underline"
        >
          {lang === 'es' ? 'Hable con un experto en ABA' : 'Talk to an ABA expert'}
        </a>
      </div>
    </div>
  </div>
</section>
