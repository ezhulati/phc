---
/**
 * Process Steps Component
 * Displays 3-step process visualization
 */

interface Props {
  lang?: 'en' | 'es';
}

const { lang = 'en' } = Astro.props;

const content = {
  en: {
    title: 'How it works',
    subtitle: 'Three steps to get started',
    steps: [
      {
        number: '1',
        title: 'Free consultation',
        description: 'Talk to our team about your child\'s needs.'
      },
      {
        number: '2',
        title: 'Assessment',
        description: 'A BCBA evaluates your child\'s skills and challenges.'
      },
      {
        number: '3',
        title: 'Start therapy',
        description: 'We create a custom plan and begin sessions.'
      }
    ]
  },
  es: {
    title: 'Cómo funciona',
    subtitle: 'Tres pasos para comenzar',
    steps: [
      {
        number: '1',
        title: 'Consulta gratis',
        description: 'Hable con nuestro equipo sobre las necesidades de su hijo.'
      },
      {
        number: '2',
        title: 'Evaluación',
        description: 'Un BCBA evalúa las habilidades y desafíos de su hijo.'
      },
      {
        number: '3',
        title: 'Comenzar terapia',
        description: 'Creamos un plan personalizado y comenzamos las sesiones.'
      }
    ]
  }
};

const { title, subtitle, steps } = content[lang];
---

<section class="py-16 lg:py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center max-w-3xl mx-auto mb-12">
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 mb-4">
        {title}
      </h2>
      <p class="text-lg text-neutral-600">
        {subtitle}
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 relative">
      <!-- Connecting line (desktop only) -->
      <div class="hidden md:block absolute top-16 left-1/6 right-1/6 h-0.5 bg-primary-200"></div>

      {steps.map((step, index) => (
        <div class="relative text-center">
          <div class="relative z-10 w-16 h-16 mx-auto mb-6 bg-primary-500 rounded-full flex items-center justify-center shadow-lg">
            <span class="text-2xl font-bold text-white">{step.number}</span>
          </div>
          <h3 class="text-xl font-bold text-neutral-900 mb-3">
            {step.title}
          </h3>
          <p class="text-neutral-600">
            {step.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
