---
/**
 * Card Component
 * Reusable card container with consistent styling
 */

import type { HTMLAttributes } from 'astro/types';

interface Props extends HTMLAttributes<'div'> {
  variant?: 'default' | 'elevated' | 'outlined';
  padding?: 'none' | 'sm' | 'md' | 'lg';
  href?: string;
  hoverable?: boolean;
}

const {
  variant = 'default',
  padding = 'md',
  href,
  hoverable = false,
  class: className,
  ...rest
} = Astro.props;

// Base styles
const baseStyles = 'rounded-xl overflow-hidden';

// Variant styles
const variantStyles = {
  default: 'bg-white',
  elevated: 'bg-white shadow-md',
  outlined: 'bg-white border border-neutral-200',
};

// Padding styles
const paddingStyles = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

// Hover styles (for clickable cards)
const hoverStyles = hoverable || href
  ? 'transition-all duration-200 hover:shadow-lg hover:-translate-y-1'
  : '';

// Combine styles
const cardClasses = [
  baseStyles,
  variantStyles[variant],
  paddingStyles[padding],
  hoverStyles,
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={`block no-underline ${cardClasses}`} {...rest}>
    <slot />
  </a>
) : (
  <div class={cardClasses} {...rest}>
    <slot />
  </div>
)}
