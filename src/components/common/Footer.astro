---
/**
 * Footer Component
 * Site footer with links, contact info, city links, and copyright
 * Matches WordPress site design with 40+ city links
 */

import { getLangFromUrl, t } from '@/i18n/ui';
import cities from '@/data/cities.json';

const lang = getLangFromUrl(Astro.url);
const currentYear = new Date().getFullYear();

// Footer navigation sections
const footerSections = [
  {
    title: lang === 'es' ? 'Acerca de' : 'About Us',
    links: [
      { label: t(lang, 'nav.about'), href: lang === 'es' ? '/es/acerca-de/' : '/about/' },
      { label: lang === 'es' ? 'Servicios' : 'Services', href: lang === 'es' ? '/es/servicios/' : '/services/' },
      { label: t(lang, 'nav.careers'), href: lang === 'es' ? '/es/carreras/' : '/careers/' },
      { label: t(lang, 'nav.contact'), href: lang === 'es' ? '/es/contacto/' : '/contact/' },
    ],
  },
  {
    title: lang === 'es' ? 'Enlaces Rápidos' : 'Quick Links',
    links: [
      { label: lang === 'es' ? '¿Qué es la Terapia ABA?' : 'What is ABA Therapy?', href: '/what-is-aba-therapy/' },
      { label: lang === 'es' ? 'Beneficios de ABA' : 'Benefits of ABA', href: '/benefits-of-aba-therapy/' },
      { label: lang === 'es' ? 'Costos y Seguros' : 'Costs & Insurance', href: '/aba-therapy/costs-insurance/' },
      { label: lang === 'es' ? 'Consejos para Padres' : 'Parenting Tips', href: '/aba-therapy/parenting-tips/' },
    ],
  },
];

const legalLinks = [
  { label: t(lang, 'footer.privacy'), href: lang === 'es' ? '/es/politica-de-privacidad/' : '/privacy-policy/' },
  { label: t(lang, 'footer.terms'), href: lang === 'es' ? '/es/terminos-y-condiciones/' : '/terms-and-conditions/' },
];

// Social media links
const socialLinks = [
  { name: 'Facebook', href: 'https://facebook.com/prosperahealthcare', icon: 'facebook' },
  { name: 'LinkedIn', href: 'https://linkedin.com/company/prosperahealthcare', icon: 'linkedin' },
  { name: 'Instagram', href: 'https://instagram.com/prosperahealthcare', icon: 'instagram' },
];
---

<footer class="bg-neutral-900 text-neutral-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-12">
      <!-- Brand Column -->
      <div>
        <a href={lang === 'es' ? '/es/' : '/'} class="inline-block no-underline">
          <img
            src="/images/brand/Prospera_Blue_Green.png"
            alt="Prospera Healthcare"
            width="180"
            height="40"
            class="h-10 w-auto brightness-0 invert"
          />
        </a>
        <p class="mt-4 text-sm leading-relaxed">
          {lang === 'es'
            ? 'Terapia ABA a domicilio de alta calidad para niños con autismo en todo Texas.'
            : 'High-quality in-home ABA therapy for children with autism across Texas.'}
        </p>

        <!-- Social Links -->
        <div class="mt-6 flex items-center gap-4">
          {socialLinks.map((social) => (
            <a
              href={social.href}
              target="_blank"
              rel="noopener noreferrer"
              class="w-10 h-10 flex items-center justify-center bg-neutral-800 rounded-full hover:bg-primary-600 transition-colors no-underline"
              aria-label={social.name}
            >
              {social.icon === 'facebook' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
              )}
              {social.icon === 'linkedin' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {social.icon === 'instagram' && (
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772A4.902 4.902 0 015.45 2.525c.636-.247 1.363-.416 2.427-.465C8.901 2.013 9.256 2 11.685 2h.63zm-.081 1.802h-.468c-2.456 0-2.784.011-3.807.058-.975.045-1.504.207-1.857.344-.467.182-.8.398-1.15.748-.35.35-.566.683-.748 1.15-.137.353-.3.882-.344 1.857-.047 1.023-.058 1.351-.058 3.807v.468c0 2.456.011 2.784.058 3.807.045.975.207 1.504.344 1.857.182.466.399.8.748 1.15.35.35.683.566 1.15.748.353.137.882.3 1.857.344 1.054.048 1.37.058 4.041.058h.08c2.597 0 2.917-.01 3.96-.058.976-.045 1.505-.207 1.858-.344.466-.182.8-.398 1.15-.748.35-.35.566-.683.748-1.15.137-.353.3-.882.344-1.857.048-1.055.058-1.37.058-4.041v-.08c0-2.597-.01-2.917-.058-3.96-.045-.976-.207-1.505-.344-1.858a3.097 3.097 0 00-.748-1.15 3.098 3.098 0 00-1.15-.748c-.353-.137-.882-.3-1.857-.344-1.023-.047-1.351-.058-3.807-.058zM12 6.865a5.135 5.135 0 110 10.27 5.135 5.135 0 010-10.27zm0 1.802a3.333 3.333 0 100 6.666 3.333 3.333 0 000-6.666zm5.338-3.205a1.2 1.2 0 110 2.4 1.2 1.2 0 010-2.4z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>

      <!-- Navigation Columns -->
      {footerSections.map((section) => (
        <div>
          <h3 class="text-white font-bold text-sm uppercase tracking-widest mb-4">
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm hover:text-white transition-colors no-underline"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Contact Info -->
      <div>
        <h3 class="text-white font-bold text-sm uppercase tracking-widest mb-4">
          {lang === 'es' ? 'Preguntas?' : 'Questions?'}
        </h3>
        <div class="space-y-3 text-sm">
          <p>{cities.contact.address}</p>
          <p>
            <a href={`tel:${cities.contact.phone.replace(/[^0-9]/g, '')}`} class="hover:text-white transition-colors no-underline">
              {cities.contact.phone}
            </a>
          </p>
          <p>
            <a href={`mailto:${cities.contact.email}`} class="hover:text-white transition-colors no-underline">
              {cities.contact.email}
            </a>
          </p>
          <p class="text-neutral-400">{cities.contact.hours}</p>
        </div>
      </div>
    </div>

    <!-- ABA Therapy Locations Section -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <h3 class="text-white font-bold text-sm uppercase tracking-widest mb-6">
        {lang === 'es' ? 'Ubicaciones de Terapia ABA' : 'ABA Therapy Locations'}
      </h3>

      <!-- Region Groups -->
      <div class="space-y-6">
        {cities.regions.map((region) => (
          <div>
            <h4 class="text-primary-400 font-medium text-sm mb-3">
              <a href={`/${region.slug}/`} class="hover:text-primary-300 transition-colors no-underline">
                {lang === 'es' ? region.nameEs : region.name}
              </a>
            </h4>
            <div class="flex flex-wrap gap-x-4 gap-y-2">
              {cities.cities
                .filter(city => city.region === region.slug)
                .map((city) => (
                  <a
                    href={`/aba-therapy/texas/${city.slug}/`}
                    class="text-sm text-neutral-400 hover:text-white transition-colors no-underline"
                  >
                    {city.name}
                  </a>
                ))}
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <!-- Copyright -->
        <p class="text-sm text-neutral-400">
          {t(lang, 'footer.copyright', { year: currentYear })}
        </p>

        <!-- Legal Links -->
        <nav class="flex items-center gap-6" aria-label="Legal">
          {legalLinks.map((link) => (
            <a
              href={link.href}
              class="text-sm text-neutral-400 hover:text-white transition-colors no-underline"
            >
              {link.label}
            </a>
          ))}
        </nav>
      </div>
    </div>
  </div>
</footer>
