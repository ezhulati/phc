---
/**
 * Spanish Careers page - with hero section
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/common/Breadcrumbs.astro';
import { generateWebPageSchema } from '@/lib/utils/schema';
import { getPageBySlug } from '@/lib/utils/get-page-data';

const pageData = getPageBySlug('careers');

const title = 'Carreras';
const content = pageData?.content || '';
const canonical = 'https://prosperahealthcare.com/es/carreras/';

const schema = generateWebPageSchema(
  { title, content, uri: '/es/carreras/', date: pageData?.date || '', modified: pageData?.modified || '' },
  canonical
);

const breadcrumbs = [
  { name: 'Inicio', href: '/es/' },
  { name: 'Carreras', href: '/es/carreras/' },
];
---

<BaseLayout
  title={title}
  description="Únase a nuestro equipo en Prospera Healthcare. Estamos contratando BCBAs, RBTs y técnicos de comportamiento en todo Texas."
  canonical={canonical}
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative min-h-[400px] lg:min-h-[450px] text-white overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/wp/AdobeStock_799881079.jpeg"
        alt="Carreras en Prospera Healthcare"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20 flex items-center min-h-[400px] lg:min-h-[450px]">
      <div>
        <div class="mb-6">
          <Breadcrumbs items={breadcrumbs} />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-4 drop-shadow-lg text-white">
          {title}
        </h1>
        <p class="text-lg md:text-xl text-white/90 max-w-2xl drop-shadow">
          Únase a nuestra misión de ayudar a los niños con autismo a prosperar. Estamos contratando en todo Texas.
        </p>
      </div>
    </div>
  </section>

  <!-- Content Section -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-16">
    <article class="prose prose-lg max-w-none">
      <div set:html={content} />
    </article>
  </div>
</BaseLayout>
