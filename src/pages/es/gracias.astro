---
/**
 * Spanish Thank You page (form submission confirmation)
 */
import PageLayout from '@/layouts/PageLayout.astro';
import { generateWebPageSchema } from '@/lib/utils/schema';

const title = 'Gracias';
const content = '<p>Recibimos su mensaje y responderemos dentro de 24-48 horas.</p>';
const canonical = 'https://prosperahealthcare.com/es/gracias/';

const schema = generateWebPageSchema(
  { title, content, uri: '/es/gracias/', date: new Date().toISOString(), modified: new Date().toISOString() },
  canonical
);
---

<PageLayout
  title={title}
  description="Gracias por contactar a Prospera Healthcare. Responderemos a su consulta en breve."
  canonical={canonical}
  schema={schema}
  noindex={true}
  breadcrumbs={[
    { name: 'Inicio', href: '/es/' },
    { name: 'Gracias', href: '/es/gracias/' },
  ]}
>
  <article class="prose prose-lg max-w-none text-center py-16">
    <h1>{title}</h1>
    <div set:html={content} />
    <div class="mt-8">
      <a href="/es/" class="inline-flex items-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-primary-500 hover:bg-primary-600">
        Volver al inicio
      </a>
    </div>
  </article>
</PageLayout>
