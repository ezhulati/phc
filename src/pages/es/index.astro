---
/**
 * Homepage - Spanish
 * Main landing page for Prospera Healthcare (Spanish version)
 * Matches WordPress site design
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import ConsultationModal from '@/components/forms/ConsultationModal';
import InsuranceLogos from '@/components/home/InsuranceLogos.astro';
import WhyChooseProsper from '@/components/home/WhyChooseProsper.astro';
import ServiceCards from '@/components/home/ServiceCards.astro';
import ProcessSteps from '@/components/home/ProcessSteps.astro';
import AboutBlock from '@/components/home/AboutBlock.astro';
import HomeFAQ from '@/components/home/HomeFAQ.astro';
import BlogPreview from '@/components/home/BlogPreview.astro';
import PartnershipBanner from '@/components/home/PartnershipBanner.astro';
import { generateOrganizationSchema, generateWebsiteSchema } from '@/lib/utils/schema';

const title = 'Prospera Healthcare | Servicios de Terapia ABA en Texas';
const description = 'Prospera Healthcare brinda servicios de terapia ABA de alta calidad a domicilio para ninos con autismo en todo Texas. Tratamiento basado en evidencia con atencion compasiva.';

const schemas = [generateOrganizationSchema(), generateWebsiteSchema()];
---

<BaseLayout
  title={title}
  description={description}
  schema={schemas}
  canonical="https://prosperahealthcare.com/es/"
  alternateLanguages={[{ hreflang: 'en', href: 'https://prosperahealthcare.com/' }]}
>
  <!-- Hero Section -->
  <section class="relative min-h-[600px] lg:min-h-[700px] text-white overflow-hidden">
    <!-- Full-width background image (same as WordPress) -->
    <div class="absolute inset-0">
      <img
        src="/images/wp/AdobeStock_630100389-scaled.jpeg"
        alt="Sesión de terapia ABA con niño"
        class="w-full h-full object-cover"
      />
      <!-- Dark overlay with brand color tint -->
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-40 flex items-center min-h-[600px] lg:min-h-[700px]">
      <div class="max-w-2xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 drop-shadow-lg text-white">
          Ayudando a los Niños a <span class="text-[2em]">Prosperar</span>
        </h1>
        <p class="text-base md:text-lg text-white/90 mb-8 max-w-xl drop-shadow">
          Terapia ABA personalizada a domicilio en Texas
        </p>
        <div class="flex flex-wrap gap-4">
          <ConsultationModal client:load lang="es" triggerText="Hable con un Experto en ABA" />
          <Button href="/es/about/" variant="secondary" class="!text-white !border-white hover:!bg-white hover:!text-primary-600">
            Sobre Nosotros
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Insurance Partners -->
  <InsuranceLogos lang="es" />

  <!-- Why Choose Prospera -->
  <WhyChooseProsper lang="es" />

  <!-- Services Section -->
  <ServiceCards lang="es" />

  <!-- How We Help - Process Steps -->
  <ProcessSteps lang="es" />

  <!-- About/Contact Block -->
  <AboutBlock lang="es" />

  <!-- FAQ Section -->
  <HomeFAQ lang="es" />

  <!-- Blog/Articles Preview -->
  <BlogPreview lang="es" limit={6} />

  <!-- Finding YALL Partnership Banner -->
  <PartnershipBanner lang="es" />

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Listo para Ayudar a Su Hijo a Prosperar?
      </h2>
      <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
        De el primer paso hacia el exito de su hijo. Programe una consulta gratuita con nuestro equipo hoy.
      </p>
      <ConsultationModal client:load lang="es" triggerText="Comience Hoy" />
    </div>
  </section>
</BaseLayout>
