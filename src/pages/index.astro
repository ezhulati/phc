---
/**
 * Homepage - English
 * Main landing page for Prospera Healthcare
 * Matches WordPress site design
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import ConsultationModal from '@/components/forms/ConsultationModal';
import InsuranceLogos from '@/components/home/InsuranceLogos.astro';
import WhyChooseProsper from '@/components/home/WhyChooseProsper.astro';
import ServiceCards from '@/components/home/ServiceCards.astro';
import ProcessSteps from '@/components/home/ProcessSteps.astro';
import AboutBlock from '@/components/home/AboutBlock.astro';
import HomeFAQ from '@/components/home/HomeFAQ.astro';
import BlogPreview from '@/components/home/BlogPreview.astro';
import { generateOrganizationSchema, generateWebsiteSchema } from '@/lib/utils/schema';

const title = 'Prospera Healthcare | ABA Therapy Services in Texas';
const description = 'Prospera Healthcare provides high-quality in-home ABA therapy services for children with autism across Texas. Evidence-based treatment with compassionate care.';

const schemas = [generateOrganizationSchema(), generateWebsiteSchema()];
---

<BaseLayout title={title} description={description} schema={schemas}>
  <!-- Hero Section -->
  <section class="relative min-h-[600px] lg:min-h-[700px] text-white overflow-hidden">
    <!-- Full-width background image (same as WordPress) -->
    <div class="absolute inset-0">
      <img
        src="/images/wp/AdobeStock_630100389-scaled.jpeg"
        alt="ABA Therapy session with child"
        class="w-full h-full object-cover"
      />
      <!-- Dark overlay with brand color tint -->
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 lg:py-40 flex items-center min-h-[600px] lg:min-h-[700px]">
      <div class="max-w-2xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight mb-6 drop-shadow-lg text-white">
          Helping Children <span class="text-[2em]">Prosper</span>
        </h1>
        <p class="text-base md:text-lg text-white/90 mb-8 max-w-xl drop-shadow">
          Tailored in-home ABA therapy in Texas
        </p>
        <div class="flex flex-wrap gap-4">
          <ConsultationModal client:load lang="en" triggerText="Talk to an ABA Expert" />
          <Button href="/about/" variant="secondary" class="!text-white !border-white hover:!bg-white hover:!text-primary-600">
            About us
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Insurance Partners -->
  <InsuranceLogos lang="en" />

  <!-- Why Choose Prospera -->
  <WhyChooseProsper lang="en" />

  <!-- Services Section -->
  <ServiceCards lang="en" />

  <!-- How We Help - Process Steps -->
  <ProcessSteps lang="en" />

  <!-- About/Contact Block -->
  <AboutBlock lang="en" />

  <!-- FAQ Section -->
  <HomeFAQ lang="en" />

  <!-- Blog/Articles Preview -->
  <BlogPreview lang="en" limit={6} />

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">
        Ready to Help Your Child Thrive?
      </h2>
      <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
        Take the first step toward your child's success. Schedule a free consultation with our team today.
      </p>
      <ConsultationModal client:load lang="en" triggerText="Get Started Today" />
    </div>
  </section>
</BaseLayout>
