---
/**
 * Contact San Antonio page - loads from pre-fetched JSON data
 */
import PageLayout from '@/layouts/PageLayout.astro';
import { generateWebPageSchema } from '@/lib/utils/schema';
import { getPageBySlug, decodeHtmlEntities } from '@/lib/utils/get-page-data';

const pageData = getPageBySlug('san-antonio');

const title = decodeHtmlEntities(pageData?.title || 'San Antonio');
const content = pageData?.content || '';
const canonical = 'https://prosperahealthcare.com/contact/san-antonio/';

const schema = generateWebPageSchema(
  { title, content, uri: '/contact/san-antonio/', date: pageData?.date || '', modified: pageData?.modified || '' },
  canonical
);
---

<PageLayout
  title={`Contact ${title}`}
  description="Contact Prospera Healthcare's San Antonio office for ABA therapy services in the San Antonio metro area."
  canonical={canonical}
  schema={schema}
  breadcrumbs={[
    { name: 'Home', href: '/' },
    { name: 'Contact', href: '/contact/' },
    { name: title, href: '/contact/san-antonio/' },
  ]}
>
  <article class="prose prose-lg max-w-none">
    <h1>Contact {title}</h1>
    <div set:html={content} />
  </article>
</PageLayout>
