---
/**
 * Contact El Paso page - loads from pre-fetched JSON data
 */
import PageLayout from '@/layouts/PageLayout.astro';
import { generateWebPageSchema } from '@/lib/utils/schema';
import { getPageBySlug, decodeHtmlEntities } from '@/lib/utils/get-page-data';

const pageData = getPageBySlug('el-paso');

const title = decodeHtmlEntities(pageData?.title || 'El Paso');
const content = pageData?.content || '';
const canonical = 'https://prosperahealthcare.com/contact/el-paso/';

const schema = generateWebPageSchema(
  { title, content, uri: '/contact/el-paso/', date: pageData?.date || '', modified: pageData?.modified || '' },
  canonical
);
---

<PageLayout
  title={`Contact ${title}`}
  description="ABA therapy in El Paso. Contact our team to get started."
  canonical={canonical}
  schema={schema}
  breadcrumbs={[
    { name: 'Home', href: '/' },
    { name: 'Contact', href: '/contact/' },
    { name: title, href: '/contact/el-paso/' },
  ]}
>
  <article class="prose prose-lg max-w-none">
    <h1>Contact {title}</h1>
    <div set:html={content} />
  </article>
</PageLayout>
