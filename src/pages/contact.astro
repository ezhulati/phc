---
/**
 * Contact page - Get in touch with Prospera Healthcare
 * Rebuilt with proper Astro components
 */
import BaseLayout from '@/layouts/BaseLayout.astro';
import Breadcrumbs from '@/components/common/Breadcrumbs.astro';
import ContactForm from '@/components/forms/ContactForm';
import { generateWebPageSchema } from '@/lib/utils/schema';

const title = 'Contact us';
const canonical = 'https://prosperahealthcare.com/contact/';

const schema = generateWebPageSchema(
  { title, content: '', uri: '/contact/', date: '', modified: '' },
  canonical
);

const breadcrumbs = [
  { name: 'Home', href: '/' },
  { name: 'Contact', href: '/contact/' },
];

// Regional offices
const regions = [
  {
    name: 'North Texas',
    href: '/contact/north-texas/',
    address: '4351 Cross Timbers Rd, Suite 400',
    city: 'Flower Mound, TX 75028',
    phone: '(972) 900-2488',
    image: '/images/wp/North-Texas-ABA-Therapy.jpeg',
    areas: ['Dallas', 'Fort Worth', 'Plano', 'Frisco', 'McKinney', 'Arlington'],
  },
  {
    name: 'San Antonio',
    href: '/contact/san-antonio/',
    address: '8000 IH-10 West, Suite 600',
    city: 'San Antonio, TX 78230',
    phone: '(210) 944-4449',
    image: '/images/wp/San-Antonio-ABA-Therapy.jpeg',
    areas: ['San Antonio', 'New Braunfels', 'Seguin', 'Boerne'],
  },
  {
    name: 'El Paso',
    href: '/contact/el-paso/',
    address: '221 N Kansas St, Suite 700',
    city: 'El Paso, TX 79901',
    phone: '(915) 201-0085',
    image: '/images/wp/El-Paso-ABA-Therapy.jpeg',
    areas: ['El Paso', 'Horizon City', 'Socorro', 'Fabens'],
  },
];
---

<BaseLayout
  title={title}
  description="Contact Prospera Healthcare for ABA therapy services in Texas. Reach our offices in North Texas, San Antonio, and El Paso."
  canonical={canonical}
  schema={schema}
>
  <!-- Hero Section -->
  <section class="relative min-h-[400px] lg:min-h-[450px] text-white overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="/images/wp/Happy-Kids-Smiling.jpeg"
        alt="Contact Prospera Healthcare"
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>
    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 lg:py-20 flex items-center min-h-[400px] lg:min-h-[450px]">
      <div class="max-w-2xl">
        <div class="mb-6">
          <Breadcrumbs items={breadcrumbs} />
        </div>
        <span class="text-primary-300 font-semibold text-sm uppercase tracking-wider">Get in touch</span>
        <h1 class="text-5xl font-bold leading-tight mt-2 mb-4 drop-shadow-lg text-white">
          Contact us
        </h1>
        <p class="text-lg text-white/90 max-w-xl drop-shadow">
          Questions about ABA therapy? We're here to help.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Form & Info Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">
            Send a message
          </h2>
          <p class="text-neutral-600 mb-8">
            We respond within 24 hours.
          </p>
          <ContactForm client:load lang="en" />
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8">
          <h2 class="text-2xl font-bold text-neutral-900 mb-6">
            Contact info
          </h2>

          <div class="space-y-6">
            <!-- Main Phone -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Phone</h3>
                <a href="tel:+19729002488" class="inline-flex items-center min-h-[44px] text-primary-600 hover:text-primary-700 text-lg">
                  (972) 900-2488
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Email</h3>
                <a href="mailto:hello@prosperahealthcare.com" class="inline-flex items-center min-h-[44px] text-primary-600 hover:text-primary-700">
                  hello@prosperahealthcare.com
                </a>
              </div>
            </div>

            <!-- Main Address -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Main office</h3>
                <p class="text-neutral-600">
                  4351 Cross Timbers Rd, Suite 400<br />
                  Flower Mound, TX 75028
                </p>
              </div>
            </div>

            <!-- Hours -->
            <div class="flex gap-4">
              <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                <svg class="w-6 h-6 text-primary-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-neutral-900">Hours</h3>
                <p class="text-neutral-600">
                  Monday - Friday: 8:00 AM - 6:00 PM<br />
                  Saturday - Sunday: Closed
                </p>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="mt-10 p-6 bg-neutral-50 rounded-xl">
            <h3 class="font-semibold text-neutral-900 mb-4">Quick links</h3>
            <ul class="space-y-0">
              <li>
                <a href="/services/" class="text-primary-600 hover:text-primary-700 flex items-center gap-2 min-h-[44px]">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Services
                </a>
              </li>
              <li>
                <a href="/about/" class="text-primary-600 hover:text-primary-700 flex items-center gap-2 min-h-[44px]">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  About us
                </a>
              </li>
              <li>
                <a href="/careers/" class="text-primary-600 hover:text-primary-700 flex items-center gap-2 min-h-[44px]">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  Careers
                </a>
              </li>
              <li>
                <a href="/aba-therapy/" class="text-primary-600 hover:text-primary-700 flex items-center gap-2 min-h-[44px]">
                  <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                  ABA therapy resources
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Regional Offices Section -->
  <section class="py-16 lg:py-24 bg-neutral-900 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <span class="text-primary-400 font-semibold text-sm uppercase tracking-wider">Locations</span>
        <h2 class="text-2xl font-bold mt-2 text-white">
          Our offices
        </h2>
        <p class="text-lg text-neutral-300 mt-4 max-w-2xl mx-auto">
          Three regions across Texas.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {regions.map((region) => (
          <a
            href={region.href}
            class="group block rounded-xl overflow-hidden bg-neutral-800 hover:bg-neutral-700 transition-colors no-underline"
          >
            <div class="h-48 overflow-hidden">
              <img
                src={region.image}
                alt={`ABA Therapy in ${region.name}`}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                loading="lazy"
              />
            </div>
            <div class="p-6">
              <h3 class="text-xl font-semibold text-primary-400 mb-3">
                {region.name}
              </h3>
              <p class="text-neutral-300 text-sm mb-2">
                {region.address}<br />
                {region.city}
              </p>
              <p class="text-white font-semibold mb-4">
                {region.phone}
              </p>
              <p class="text-neutral-400 text-sm">
                Serving: {region.areas.join(', ')}
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 lg:py-24 bg-primary-600 text-white">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl font-bold mb-4 text-white">
        Ready to start?
      </h2>
      <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
        Call or email for a free consultation.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="tel:+19729002488"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-primary-600 bg-white rounded-lg hover:bg-primary-50 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          (972) 900-2488
        </a>
        <a
          href="mailto:hello@prosperahealthcare.com"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white border-2 border-white rounded-lg hover:bg-white/10 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          Email us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
