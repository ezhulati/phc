---
/**
 * Admin - Schedule Change Requests
 * Internal form for employee technicians to request schedule changes
 * noindex - not for public access
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import ScheduleChangeForm from '@/components/admin/ScheduleChangeForm';
---

<BaseLayout
  title="Schedule Change Requests | Prospera Healthcare"
  description="Internal schedule change request form for Prospera Healthcare employees."
  noindex={true}
>
  <main class="min-h-screen bg-neutral-50">
    <!-- Header -->
    <div class="bg-white border-b border-neutral-200">
      <div class="max-w-3xl mx-auto px-4 sm:px-6 py-8">
        <h1 class="text-2xl sm:text-3xl font-bold text-primary-600">
          Schedule Change Requests
        </h1>
        <p class="mt-2 text-neutral-600">
          Use this form to request session cancellations or schedule adjustments.
        </p>
      </div>
    </div>

    <!-- Form Section -->
    <div class="max-w-3xl mx-auto px-4 sm:px-6 py-8">
      <div class="bg-white rounded-xl shadow-sm border border-neutral-200 p-6 sm:p-8">
        <ScheduleChangeForm client:load />
      </div>

      <!-- Help Text -->
      <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-100">
        <h2 class="font-semibold text-blue-900 mb-2">Need Help?</h2>
        <p class="text-sm text-blue-800">
          If you have questions about this form or need immediate assistance,
          please contact your supervisor or email
          <a href="mailto:scheduling@prosperahealthcare.com" class="underline hover:no-underline">
            scheduling@prosperahealthcare.com
          </a>
        </p>
      </div>
    </div>
  </main>
</BaseLayout>
